/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(!head)return head;
        reve(head,nullptr);
        return h;
    }
private:
    ListNode*h;
    void reve(ListNode*head,ListNode*last)
    {
        if(!head->next)
        {
            head->next=last;
            h=head;
            return;
        }
        reve(head->next,head);
        head->next=last;
        return;
    }

};
