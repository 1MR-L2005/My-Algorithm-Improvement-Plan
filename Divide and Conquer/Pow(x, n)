class Solution {
public:
    double myPow(double x, int n) {
        if(n==0)return 1;
        if(n==1)return x;
        if(n==-1)return (double)(1.0)/x;
        if(n%2==1)return pow(myPow(x,n/2),2)*x;
        else if(n%2==-1)return pow(myPow(x,n/2),2)/x;
        else return pow(myPow(x,n/2),2);
    }
};
